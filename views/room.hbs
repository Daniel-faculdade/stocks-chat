<main class="page-room">
  <header>
      <a onclick="fn_sairSala('{{room.ticket}}')" href="/rooms">VOLTAR PARA MENU</a>
      <img src="{{room.imageUrl}}" width="200px" height="auto">
      <h2>{{ room.ticket}}</h2>
  </header>
  <section class="messages">
    <ul id="messages"></ul>
    <ul id="istyping"></ul>
    <div class="group-input-message">
        <input id="input" placeholder="Digite aqui sua mensagem sobre o ativo..." autocomplete="off" 
                onkeydown="fn_typingMessage()" onfocusin="fn_setStatusDigitando()" onfocusout="fn_setStatusDigitando()"/>
        <button class="button-enviar" onclick="fn_enviarMensagem()">
          <span class="material-icons">send</span>
        </button>
    </div>
  </section>
</main>